{
	"name": "battle-cards",

	"version": "0.0.1",

	"description": "A simple concept based on the classic \"Top Trumps\" card games of my childhood",

	"main": "./lib/init",

	"scripts": {
		"start": "node ./node_modules/nodemon/nodemon.js ./lib/init.js",

		"pretest": "node ./node_modules/jshint/bin/jshint ./lib",
		"test": "node ./node_modules/mocha/bin/mocha --watch --ui bdd  --reporter Spec"
	},

	"repository": {
		"type": "git",
		"url": "git://github.com/mattonfoot/battle-cards.git"
	},

	"author": {
		"name": "Matt Smith",
		"email": "mattonfoot@gmail.com"
	},

	"license": {
		"type": "MIT",
		"url": "https://github.com/jshint/jshint/blob/master/LICENSE"
	},

	"bugs": {
		"url": "https://github.com/mattonfoot/battle-cards/issues"
	},

	"dependencies": {
		"nodemon": "*"
	},

	"devDependencies": {
		"mocha": "*",
		"chai": "*",
		"jshint": "*"
	},

	"jshintConfig": {
		"boss":      true,
		"node":      true,
		"strict":    true,
		"white":     true,
		"smarttabs": true,
		"maxlen":    100,
		"newcap":    false,
		"undef":     true,
		"unused":    true,
		"onecase":   true,
		"indent":    2
	}
}
